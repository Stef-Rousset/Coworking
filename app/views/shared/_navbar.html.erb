<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "brand.jpg" %>
    <% end %>
    <% if controller.controller_name == "pages" && controller.action_name == "home" %>
      <ul class="navbar-nav mr-auto lang">
        <li class="nav-item dropdown">
          <p class="dropdown-toggle", id="navbarDropdown", data-toggle="dropdown", aria-haspopup= true, aria-expanded= false><%= t '.language' %></p>
          <div class="dropdown-menu dropdown-menu-right " aria-labelledby="navbarDropdown" >
            <%= link_to 'English', root_path(locale: :en), class: "dropdown-item" %>
            <%= link_to 'FranÃ§ais', root_path(locale: :fr), class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "logo.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
